<!-- JavaScript for form functionality -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    const certificateInfoSection = document.getElementById('certificateInfo');
    
    form.addEventListener('submit', function(e) {
        e.preventDefault();
        // In a real application, this would make an AJAX request to fetch certificate data
        // For demonstration, we'll just show the hidden section
        certificateInfoSection.classList.remove('hidden');
    });
});
</script> 