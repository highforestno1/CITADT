@{
    ViewData["Title"] = "Chương trình đào tạo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-[#070b3b] py-8">
    <div class="container mx-auto px-4">
        <h1 class="text-4xl font-bold text-white text-center">CHƯƠNG TRÌNH ĐÀO TẠO</h1>
        <div class="flex items-center justify-center mt-2">
            <a href="/" class="text-white hover:text-[#ffc221]">Trang chủ</a>
            <span class="mx-2 text-white">»</span>
            <a href="/Home/TrainingProgramme">
                <span class="text-[#ffc221]">Kế hoạch đào tạo</span>
            </a>
        </div>
    </div>
</div>

<div class="container mx-auto px-4 py-10">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
     <h2 class="text-2xl font-bold text-[#070b3b] border-b-2 border-[#070b3b] lg:col-span-3">KẾ HOẠCH ĐÀO TẠO</h2>

        <!-- Nội dung chính -->
        <div class="lg:col-span-2">
            <div class="w-full h-screen">
                <iframe src="/pdf/KHDT.pdf" class="w-full h-full" type="application/pdf">
                    <p class="text-center py-4">
                        Trình duyệt của bạn không hỗ trợ xem PDF trực tiếp. 
                        <a href="/path/to/your/training-programme.pdf" class="text-blue-600 hover:underline" download>
                            Nhấn vào đây để tải xuống
                        </a>
                    </p>
                </iframe>
            </div>
        </div>

        <!-- Sidebar -->
        <div>
            <!-- Tiêu điểm nổi bật -->
            <div class="mb-8">
                <h2 class="text-2xl font-bold mb-4 text-[#070b3b] border-b-2 border-[#070b3b] pb-2">Tiêu điểm</h2>
                <div class="space-y-4">
                    <div class="flex gap-3">
                        <a href="#" class="block flex-shrink-0 w-24 h-24 overflow-hidden rounded">
                            <img src="/img/daotao.png" alt="Đào tạo CNTT" class="w-full h-full object-cover">
                        </a>
                        <div>
                            <a href="#" class="block text-base font-medium hover:text-blue-600">Tuyển sinh đại học</a>
                            <p class="text-gray-600 text-xs mt-1">
                                <i class="fas fa-calendar-alt mr-1"></i>2024
                            </p>
                        </div>
                    </div>
                    <div class="flex gap-3">
                        <a href="#" class="block flex-shrink-0 w-24 h-24 overflow-hidden rounded">
                            <img src="/img/quy trinh.png" alt="Đào tạo sau đại học" class="w-full h-full object-cover">
                        </a>
                        <div>
                            <a href="#" class="block text-base font-medium hover:text-blue-600">Đào tạo sau đại học</a>
                            <p class="text-gray-600 text-xs mt-1">
                                <i class="fas fa-calendar-alt mr-1"></i>2024
                            </p>
                        </div>
                    </div>
                    <div class="flex gap-3">
                        <a href="#" class="block flex-shrink-0 w-24 h-24 overflow-hidden rounded">
                            <img src="/img/maudenghi.png" alt="Đào tạo quốc tế" class="w-full h-full object-cover">
                        </a>
                        <div>
                            <a href="#" class="block text-base font-medium hover:text-blue-600">Chương trình quốc tế</a>
                            <p class="text-gray-600 text-xs mt-1">
                                <i class="fas fa-calendar-alt mr-1"></i>2024
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Video giới thiệu -->
            <div class="mb-8">
                <h2 class="text-2xl font-bold mb-4 text-[#070b3b] border-b-2 border-[#070b3b] pb-2">Video giới thiệu</h2>
                <div class="rounded-lg overflow-hidden">
                    <div class="relative pt-[56.25%]">
                        <iframe class="absolute inset-0 w-full h-full" src="https://www.youtube.com/embed/orxSM5xiX0o"
                            frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen></iframe>
                    </div>
                </div>
                <div class="mt-4 text-center">
                    <a href="#"
                        class="inline-block px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">
                        Xem thêm video <i class="fas fa-play ml-1"></i>
                    </a>
                </div>
            </div>

            <!-- Thẻ tag -->
            <div>
                <h2 class="text-2xl font-bold mb-4 text-[#070b3b] border-b-2 border-[#070b3b] pb-2">Chủ đề</h2>
                <div class="flex flex-wrap gap-2">
                    <a href="#"
                        class="px-3 py-1 bg-gray-200 text-gray-700 rounded-md hover:bg-blue-600 hover:text-white transition-colors">Đại học</a>
                    <a href="#"
                        class="px-3 py-1 bg-gray-200 text-gray-700 rounded-md hover:bg-blue-600 hover:text-white transition-colors">Sau đại học</a>
                    <a href="#"
                        class="px-3 py-1 bg-gray-200 text-gray-700 rounded-md hover:bg-blue-600 hover:text-white transition-colors">Đào tạo</a>
                    <a href="#"
                        class="px-3 py-1 bg-gray-200 text-gray-700 rounded-md hover:bg-blue-600 hover:text-white transition-colors">Khoa học</a>
                    <a href="#"
                        class="px-3 py-1 bg-gray-200 text-gray-700 rounded-md hover:bg-blue-600 hover:text-white transition-colors">Ngoại ngữ</a>
                    <a href="#"
                        class="px-3 py-1 bg-gray-200 text-gray-700 rounded-md hover:bg-blue-600 hover:text-white transition-colors">Thông tin</a>
                    <a href="#"
                        class="px-3 py-1 bg-gray-200 text-gray-700 rounded-md hover:bg-blue-600 hover:text-white transition-colors">Tuyển sinh</a>
                    <a href="#"
                        class="px-3 py-1 bg-gray-200 text-gray-700 rounded-md hover:bg-blue-600 hover:text-white transition-colors">Sinh viên</a>
                </div>
            </div>
        </div>
    </div>
</div> 