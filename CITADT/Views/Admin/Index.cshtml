@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<div class="p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
        <!-- Total Users Card -->
        <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition-shadow duration-300">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 text-sm">Số người dùng</p>
                    <h3 class="text-2xl font-bold text-gray-800">1,234</h3>
                </div>
                <div class="bg-blue-100 p-3 rounded-full">
                    <i class="bi bi-people text-blue-600 text-xl"></i>
                </div>
            </div>
        </div>

        <!-- Total News Card -->
        <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition-shadow duration-300">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 text-sm">Số tin tức</p>
                    <h3 class="text-2xl font-bold text-gray-800">567</h3>
                </div>
                <div class="bg-green-100 p-3 rounded-full">
                    <i class="bi bi-newspaper text-green-600 text-xl"></i>
                </div>
            </div>
        </div>

        <!-- Total Categories Card -->
        <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition-shadow duration-300">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 text-sm">Danh mục</p>
                    <h3 class="text-2xl font-bold text-gray-800">12</h3>
                </div>
                <div class="bg-purple-100 p-3 rounded-full">
                    <i class="bi bi-tags text-purple-600 text-xl"></i>
                </div>
            </div>
        </div>

        <!-- Total Views Card -->
        <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition-shadow duration-300">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 text-sm">Số lượt xem</p>
                    <h3 class="text-2xl font-bold text-gray-800">89.2K</h3>
                </div>
                <div class="bg-yellow-100 p-3 rounded-full">
                    <i class="bi bi-eye text-yellow-600 text-xl"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity Section -->
    <div class="bg-white rounded-xl shadow-md p-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4">Hoạt động gần đây</h2>
        <div class="space-y-4">
            <div class="flex items-center p-4 bg-gray-50 rounded-lg">
                <div class="bg-blue-100 p-2 rounded-full mr-4">
                    <i class="bi bi-person-plus text-blue-600"></i>
                </div>
                <div>
                    <p class="font-medium">Người dùng mới đăng ký</p>
                    <p class="text-sm text-gray-500">Nguyễn Văn A đã tham gia vào nền tảng</p>
                </div>
                <span class="ml-auto text-sm text-gray-500">2 phút trước</span>
            </div>

            <div class="flex items-center p-4 bg-gray-50 rounded-lg">
                <div class="bg-green-100 p-2 rounded-full mr-4">
                    <i class="bi bi-file-earmark-plus text-green-600"></i>
                </div>
                <div>
                    <p class="font-medium">Bài báo mới xuất bản</p>
                    <p class="text-sm text-gray-500">"Latest Technology Trends" đã xuất bản</p>
                </div>
                <span class="ml-auto text-sm text-gray-500">1 giờ trước</span>
            </div>

            <div class="flex items-center p-4 bg-gray-50 rounded-lg">
                <div class="bg-purple-100 p-2 rounded-full mr-4">
                    <i class="bi bi-pencil text-purple-600"></i>
                </div>
                <div>
                    <p class="font-medium">Bài báo đã xuất bản</p>
                    <p class="text-sm text-gray-500">"AI in Healthcare" đã được cập nhật</p>
                </div>
                <span class="ml-auto text-sm text-gray-500">3 giờ trước</span>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script src="~/js/animations.js"></script>
} 