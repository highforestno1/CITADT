@model CITADT.Models.Category
@{
    ViewData["Title"] = "Thêm danh mục mới";
    Layout = "_AdminLayout";
}

<div class="p-4 md:p-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-800">Thêm danh mục mới</h1>
        <a href="/Admin/Categories" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors duration-200 flex items-center">
            <i class="bi bi-arrow-left mr-2"></i>Quay lại
        </a>
    </div>

    <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 p-4 md:p-6 max-w-3xl mx-auto">
        <form asp-action="CreateCategory" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

            <div class="space-y-6">
                <div>
                    <label asp-for="Name" class="block text-sm font-medium text-gray-700">Tên danh mục</label>
                    <input asp-for="Name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition-colors duration-200" />
                    <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Description" class="block text-sm font-medium text-gray-700">Mô tả</label>
                    <textarea asp-for="Description" rows="3" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition-colors duration-200"></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="DisplayOrder" class="block text-sm font-medium text-gray-700">Thứ tự hiển thị</label>
                    <input asp-for="DisplayOrder" type="number" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition-colors duration-200" />
                    <span asp-validation-for="DisplayOrder" class="text-red-500 text-sm"></span>
                    <p class="text-gray-500 text-xs mt-1">Thứ tự thấp sẽ hiển thị trước</p>
                </div>

                <div class="flex items-center">
                    <input asp-for="IsActive" class="rounded text-blue-500 focus:ring-blue-500" checked />
                    <label asp-for="IsActive" class="ml-2 block text-sm text-gray-700">Kích hoạt</label>
                </div>

                <div class="pt-5">
                    <div class="flex justify-end">
                        <a href="/Admin/Categories" class="bg-gray-100 text-gray-800 px-4 py-2 rounded-lg hover:bg-gray-200 transition-colors duration-200 mr-4">
                            Hủy
                        </a>
                        <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200 transform hover:scale-105">
                            <i class="bi bi-save2 mr-2"></i>Lưu danh mục
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 