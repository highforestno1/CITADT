@{
    ViewData["Title"] = "Cài đặt";
    Layout = "_AdminLayout";
}

<div class="p-4 md:p-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Cài đặt hệ thống</h1>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-6">
        <!-- General Settings -->
        <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 p-4 md:p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
                <i class="bi bi-gear-fill text-blue-500 mr-2"></i>
                Cài đặt chung
            </h2>
            <form>
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Tên website</label>
                        <input type="text" value="CITADT" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition-colors duration-200">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Mô tả website</label>
                        <textarea rows="3" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition-colors duration-200">Trung tâm ứng dụng Công nghệ thông tin và Chuyển đổi số trường Đại học Hải Phòng</textarea>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Email liên hệ</label>
                        <input type="email" value="contact@citadt.edu.vn" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition-colors duration-200">
                    </div>
                </div>
                <div class="mt-6">
                    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200 transform hover:scale-105">
                        <i class="bi bi-save2 mr-2"></i>Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>

        <!-- Admin Account Settings -->
        <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 p-4 md:p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
                <i class="bi bi-person-fill-gear text-purple-500 mr-2"></i>
                Cài đặt tài khoản admin
            </h2>
            <form>
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Tên đăng nhập</label>
                        <input type="text" value="admin" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500 transition-colors duration-200">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Mật khẩu mới</label>
                        <input type="password" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500 transition-colors duration-200">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Xác nhận mật khẩu</label>
                        <input type="password" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500 transition-colors duration-200">
                    </div>
                </div>
                <div class="mt-6">
                    <button type="submit" class="bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition-colors duration-200 transform hover:scale-105">
                        <i class="bi bi-key-fill mr-2"></i>Cập nhật mật khẩu
                    </button>
                </div>
            </form>
        </div>

        <!-- Email Settings -->
        <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 p-4 md:p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
                <i class="bi bi-envelope-fill text-green-500 mr-2"></i>
                Cài đặt email
            </h2>
            <form>
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">SMTP Server</label>
                        <input type="text" value="smtp.gmail.com" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 transition-colors duration-200">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">SMTP Port</label>
                        <input type="number" value="587" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 transition-colors duration-200">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Email gửi</label>
                        <input type="email" value="noreply@citadt.edu.vn" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 transition-colors duration-200">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Mật khẩu email</label>
                        <input type="password" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 transition-colors duration-200">
                    </div>
                </div>
                <div class="mt-6">
                    <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors duration-200 transform hover:scale-105">
                        <i class="bi bi-envelope-check mr-2"></i>Lưu cài đặt email
                    </button>
                </div>
            </form>
        </div>

        <!-- Backup Settings -->
        <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 p-4 md:p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
                <i class="bi bi-cloud-arrow-up-fill text-orange-500 mr-2"></i>
                Sao lưu và khôi phục
            </h2>
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700">Tự động sao lưu</label>
                    <select class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500 transition-colors duration-200">
                        <option value="daily">Hàng ngày</option>
                        <option value="weekly">Hàng tuần</option>
                        <option value="monthly">Hàng tháng</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Giữ bản sao lưu trong</label>
                    <select class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500 transition-colors duration-200">
                        <option value="7">7 ngày</option>
                        <option value="30">30 ngày</option>
                        <option value="90">90 ngày</option>
                    </select>
                </div>
                <div class="flex flex-col sm:flex-row gap-4">
                    <button type="button" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors duration-200 transform hover:scale-105 flex items-center justify-center">
                        <i class="bi bi-download mr-2"></i>Sao lưu ngay
                    </button>
                    <button type="button" class="bg-orange-600 text-white px-4 py-2 rounded-lg hover:bg-orange-700 transition-colors duration-200 transform hover:scale-105 flex items-center justify-center">
                        <i class="bi bi-upload mr-2"></i>Khôi phục
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Xử lý form submit và hiển thị thông báo
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                Swal.fire({
                    title: 'Thành công!',
                    text: 'Cài đặt đã được lưu.',
                    icon: 'success',
                    confirmButtonText: 'OK',
                    confirmButtonColor: '#3085d6',
                    showClass: {
                        popup: 'animate__animated animate__fadeInDown'
                    },
                    hideClass: {
                        popup: 'animate__animated animate__fadeOutUp'
                    }
                });
            });
        });

        // Thêm hiệu ứng loading khi click nút
        document.querySelectorAll('button').forEach(button => {
            button.addEventListener('click', function() {
                this.classList.add('opacity-75');
                setTimeout(() => {
                    this.classList.remove('opacity-75');
                }, 200);
            });
        });
    </script>
} 